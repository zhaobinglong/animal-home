.notice{
  font-size:28rpx;
  color:#333;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #EFEFEF;
  padding: 0 20rpx;
  display: flex;
  transition: all 1s ease 2s;
  height: 0;
}
.notice-icon {
  padding-right: 20rpx;
  color: #f8d452;
}
.notice-text {
  overflow: hidden;
}
.notice-animation {
  animation: 15s wordsLoop linear infinite normal;
}
.notice-height {
  height: 52rpx;
}

