<!-- 主体图片 -->
<view class="detail_swiper">
  <swiper indicator-dots  indicator-active-color="#7ed321" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperChange" style="height:{{Hei}}" wx:if="{{ form.imgs.length }}">
    <block wx:key wx:for="{{form.imgs}}"  wx:for-item="imgname" wx:key="index" >
      <swiper-item>
        <image bindtap="clickImg" src="{{imgname}}" class='swiper_item'  bindload='imgLoad'  mode="widthFix" data-name="{{imgname}}"  />
      </swiper-item>
    </block>
  </swiper>
</view>
<!-- 主体内容区域 -->
<view class='detail_cont' >
  <text >{{form.cont}}</text> 
</view>


<view class='detail_address flex flex_between' wx:if="{{ form.address && form.address != '你在哪里？' }}">
   <view  class='flex '>
       <image src="../../img/address.png" class='icon_address mr4' wx:if="{{form.address}}"></image>
       <view>{{form.address}}</view>
   </view>
</view>            


